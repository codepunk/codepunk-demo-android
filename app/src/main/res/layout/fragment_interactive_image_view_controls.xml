<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/large_margin"
    android:background="@color/color_interactive_image_view_demo_drawer_color"
    android:clickable="true"
    tools:context="com.codepunk.demo.interactiveimageview.version5.InteractiveImageViewControlsFragment"
    tools:ignore="KeyboardInaccessibleWidget">

    <TextView
        android:id="@+id/label_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_image" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:entries="@array/image_names" />

    <TextView
        android:id="@+id/label_scale_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_scale_type"
        android:layout_marginTop="@dimen/standard_margin" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_scale_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:entries="@array/scale_types" />

    <com.codepunk.demo.SeekBarLayout
        android:id="@+id/layout_seek_bar_pan_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:label="@string/label_pan_x" />

    <com.codepunk.demo.SeekBarLayout
        android:id="@+id/layout_seek_bar_pan_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:label="@string/label_pan_y" />

    <com.codepunk.demo.SeekBarLayout
        android:id="@+id/layout_seek_bar_scale_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:label="@string/label_scale_x" />

    <com.codepunk.demo.SeekBarLayout
        android:id="@+id/layout_seek_bar_scale_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:label="@string/label_scale_y" />

</LinearLayout>
