<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_swap_horiz_white_24dp"/>

    <TextView
        android:id="@+id/text_current_value"
        android:layout_width="@dimen/extended_seek_bar_value_view_width"
        android:layout_height="wrap_content"
        tools:text="100%"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/small_margin"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/text_min_value"
        android:layout_width="@dimen/extended_seek_bar_value_view_width"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textAlignment="gravity"
        tools:text="0%"/>

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seek_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:max="100" />

    <TextView
        android:id="@+id/text_max_value"
        android:layout_width="@dimen/extended_seek_bar_value_view_width"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textAlignment="gravity"
        tools:text="100%"/>

</LinearLayout>
