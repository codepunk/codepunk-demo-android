<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Theme">
        <attr name="appCompatSeekBarExStyle" format="reference" />
        <attr name="interactiveImageViewStyle" format="reference" />

        <attr name="centerX" format="float" />
        <attr name="centerY" format="float" />
        <attr name="clampedMax" format="integer" />
        <attr name="clampedMin" format="integer" />
        <attr name="panEnabled" format="boolean" />
        <attr name="scaleX" format="float">
            <enum name="auto" value="-1" />
        </attr>
        <attr name="scaleY" format="float">
            <enum name="auto" value="-1" />
        </attr>
        <attr name="zoomEnabled" format="boolean" />
        <attr name="interactivity">
            <flag name="none" value="0" />
            <flag name="scroll" value="1" />
            <flag name="fling" value="2" />
            <flag name="scale" value="4" />
            <flag name="doubleTap" value="8"/>
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AppCompatSeekBarEx">
        <attr name="clampedMax" />
        <attr name="clampedMin" />
    </declare-styleable>

    <declare-styleable name="InteractiveImageView">
        <attr name="centerX" />
        <attr name="centerY" />
        <attr name="panEnabled" />
        <attr name="scaleX" />
        <attr name="scaleY" />
        <attr name="zoomEnabled" />
        <attr name="interactivity" />
    </declare-styleable>
</resources>