<resources>
    <style name="AppCompatSeekBarEx" parent="@android:style/Widget.SeekBar">
    </style>

    <style name="InteractiveImageView" parent="@android:style/Widget">
        <item name="compatCropToPadding">false</item>
        <item name="doubleTapToScaleEnabled">true</item>
        <item name="flingEnabled">true</item>
        <item name="scaleEnabled">true</item>
        <item name="scalePresets">@array/scale_presets</item>
        <item name="scrollEnabled">true</item>
    </style>

    <style name="InteractiveImageViewEx" parent="InteractiveImageView">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AbsSeekBarLayout" parent="@android:style/Widget" />
</resources>
